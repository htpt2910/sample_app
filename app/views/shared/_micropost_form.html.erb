<%= form_for(@micropost) do |f| %>
<%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("post.placeholder") %>
  </div>
  <%= f.submit t("post.post"), class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :image, accept: Settings.post.image_type %>
  </span>
<% end %>

<%= javascript_pack_tag 'microposts' %>
