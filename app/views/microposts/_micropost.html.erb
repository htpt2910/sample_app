<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.post.avatar_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= t "post.script1" %><%= time_ago_in_words(micropost.created_at) %> <%= t("post.script2") %> 
    <% if current_user?(micropost.user) %>
      <%= link_to t("post.delete"), micropost, method: :delete,
      data: { confirm: t("post.confirm") } %>
    <% end %>
  </span>
</li>
