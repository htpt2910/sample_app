<% provide(:title, t("home.title")) %>
<body>
  <% if logged_in? %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render "shared/user_info" %>
        </section>
        <section class="micropost_form">
          <%= render "shared/micropost_form" %>
        </section>
      </aside>
      <div class="col-md-8">
        <h3><%= t("home.feed") %></h3>
        <%= render "shared/feed" %>
      </div>
    </div>
  <% else %>
  <div class="center jumbotron">
    <h1><%= t("home.cheering")%></h1>
    <h2>
      <%= t("home.description")%>
      <a><%= link_to t("home.tutorial"), Settings.urls.footer.tutorial %> </a>
      <%=t("home.appname")%>
    </h2>
    <%= link_to t("home.signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <img alt="Rails logo" width="130px" height="150px" src="/assets/hihi.jpg">
  <% end %>
</body>
