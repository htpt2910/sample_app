const alert_message = "<%= I18n.t("post.image_size_error") %>";
const image_max_size = <%= Settings.post.image_size %>;

$("#micropost_image").bind("change", function() {
  console.log("image_max_size", image_max_size)
  var size_in_megabytes = this.files[0].size;
  if (size_in_megabytes > image_max_size) {
    alert(alert_message);
  }
});
